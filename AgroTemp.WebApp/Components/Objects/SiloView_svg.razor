@inject NavigationManager Navigation

<style>
    .svg-container {
        width: 100%;
        max-width: 500px;
        margin: auto;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

        .svg-container:hover {
            transform: scale(1.05);
        }
</style>


<div class="svg-container" @onclick="GoToPage">
    <svg width=" 300" height="300" viewBox="0 0 300 300" xmlns="http://www.w3.org/2000/svg">
        <a href="ActiveAlarms" />
        <defs>
            <!-- Radialny gradient tła dachu -->
            <radialGradient id="domeGradient" cx="50%" cy="40%" r="60%">
                <stop offset="0%" stop-color="#eeeeee" />
                <stop offset="70%" stop-color="#bbbbbb" />
                <stop offset="100%" stop-color="#888888" />
            </radialGradient>
        </defs>

        <!-- Główna kopuła silosu z gradientem -->
        <circle cx="150" cy="150" r="120" fill="url(#domeGradient)" stroke="#666666" stroke-width="4" />

        <!-- Właz centralny -->
        <circle cx="150" cy="150" r="15" fill="#555555" stroke="#333333" stroke-width="2" />


        <!-- Żebra konstrukcyjne (co 30°) -->
        <g stroke="#aaaaaa" stroke-width="2">
            <line x1="150" y1="150" x2="150" y2="30" />
            <line x1="150" y1="150" x2="222.5" y2="47.5" />
            <line x1="150" y1="150" x2="270" y2="97.5" />
            <line x1="150" y1="150" x2="285" y2="150" />
            <line x1="150" y1="150" x2="270" y2="202.5" />
            <line x1="150" y1="150" x2="222.5" y2="252.5" />
            <line x1="150" y1="150" x2="150" y2="270" />
            <line x1="150" y1="150" x2="77.5" y2="252.5" />
            <line x1="150" y1="150" x2="30" y2="202.5" />
            <line x1="150" y1="150" x2="15" y2="150" />
            <line x1="150" y1="150" x2="30" y2="97.5" />
            <line x1="150" y1="150" x2="77.5" y2="47.5" />
        </g>

        <!-- Właz techniczny -->
        <g>
            <rect x="215" y="130" width="30" height="20" fill="#777777" stroke="#333333" stroke-width="2" rx="3" ry="3" />
            <line x1="230" y1="130" x2="230" y2="150" stroke="#111111" stroke-width="3" />
        </g>

        <text x="150"
              y="150"
              text-anchor="middle"
              dominant-baseline="middle"
              font-family="Arial"
              font-size="35"
              font-weight="bold"
              fill="#222222"
              stroke="white"
              stroke-width="0.5">
            @SiloObject.Name
        </text>

        <!-- Sondy pomiarowe – wewnętrzne (6) -->
        <g font-family="Arial" font-size="12" fill="#131B20">

            <!-- Wewnętrzny okrąg (r = 60) --> <!-- Sondy 1–6 -->
            <g fill="#ffcc00" stroke="#131B20" stroke-width="1">
                <!-- Wygenerowane punkty -->
                <!-- Sonda 1 -->
                <circle cx="150" cy="90" r="5" />
                <text x="150" y="78" text-anchor="middle">S1</text>

                <!-- Sonda 2 -->
                <circle cx="201.96" cy="120" r="5" />
                <text x="207" y="113" text-anchor="start">S2</text>

                <!-- Sonda 3 -->
                <circle cx="201.96" cy="180" r="5" />
                <text x="207" y="188" text-anchor="start">S3</text>

                <!-- Sonda 4 -->
                <circle cx="150" cy="210" r="5" />
                <text x="150" y="223" text-anchor="middle">S4</text>

                <!-- Sonda 5 -->
                <circle cx="98.04" cy="180" r="5" />
                <text x="88" y="188" text-anchor="end">S5</text>

                <!-- Sonda 6 -->
                <circle cx="98.04" cy="120" r="5" />
                <text x="88" y="113" text-anchor="end">S6</text>
            </g>
        </g>
        <!-- Sondy pomiarowe – zewnętrzne (12) -->
        <g font-family="Arial" font-size="12" fill="#131B20">
            <!-- Zewnętrzny okrąg (r = 100) --> <!-- Sondy 7–18 -->
            <g fill="#ffcc00" stroke="#131B20" stroke-width="1">
                <!-- Sonda 7 -->
                <circle cx="150" cy="50" r="5" display="none" />
                <text x="150" y="36" text-anchor="middle" display="none">@Probes.</text>

                <!-- Sonda 8 -->
                <circle cx="200" cy="65" r="5" />
                <text x="208" y="60" text-anchor="start">S8</text>

                <!-- Sonda 9 -->
                <circle cx="235" cy="100" r="5" />
                <text x="245" y="100" text-anchor="start">S9</text>

                <!-- Sonda 10 -->
                <circle cx="250" cy="150" r="5" />
                <text x="258" y="165" text-anchor="middle">S10</text>

                <!-- Sonda 11 -->
                <circle cx="235" cy="200" r="5" />
                <text x="245" y="203" text-anchor="start">S11</text>

                <!-- Sonda 12 -->
                <circle cx="200" cy="235" r="5" />
                <text x="208" y="240" text-anchor="start">S12</text>

                <!-- Sonda 13 -->
                <circle cx="150" cy="250" r="5" />
                <text x="150" y="265" text-anchor="middle">S13</text>

                <!-- Sonda 14 -->
                <circle cx="100" cy="235" r="5" />
                <text x="92" y="240" text-anchor="end">S14</text>

                <!-- Sonda 15 -->
                <circle cx="65" cy="200" r="5" />
                <text x="55" y="203" text-anchor="end">S15</text>

                <!-- Sonda 16 -->
                <circle cx="50" cy="150" r="5" />
                <text x="40" y="165" text-anchor="end">S16</text>

                <!-- Sonda 17 -->
                <circle cx="65" cy="100" r="5" />
                <text x="55" y="100" text-anchor="end">S17</text>

                <!-- Sonda 18 -->
                <circle cx="100" cy="65" r="5" />
                <text x="92" y="60" text-anchor="end">S18</text>
            </g>
        </g>

        <g font-family="Arial" font-size="12" fill="#131B20">

            <!-- Wewnętrzny okrąg (r = 60) --> <!-- Sondy 1–6 -->
            <g fill="#ffcc00" stroke="#131B20" stroke-width="1">
                <!-- Wygenerowane punkty -->
                <!-- Sonda 19 -->
                <circle cx="150" cy="170" r="5" />
                <text x="150" y="185" text-anchor="middle">S19</text>

            </g>
        </g>

    </svg>
</div>

@code {
    private void GoToPage()
    {
        Navigation.NavigateTo($"{Navigation.BaseUri}ActiveAlarms");
    }
}